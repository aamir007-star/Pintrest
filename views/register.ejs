<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-100 flex items-center justify-center">

  <div class="w-[25vw] bg-white px-6 py-6 rounded-[30px]">
    <h1 class="text-3xl tracking-tight text-center font-semibold  mb-4 leading-non">create new account</h1>
    <form action="/register" method="post">

      <% if( error.length > 0) { %>
       <p class="text-red-600 capitalize"><%= error %></p>
      <% }%>

      <input class="block border-1 rounded-md w-full px-3 mt-2 py-1" type="text" name="username" placeholder="username">
      <input class="block border-1 rounded-md w-full px-3 mt-2 py-1" type="email" name="email" placeholder="email">
      <input class="block border-1 rounded-md w-full px-3 mt-2 py-1" type="password" name="password" placeholder="password">
      <input class="block w-full px-3 mt-2 py-1 bg-red-600 text-white rounded-full" type="submit" value="Login">
    
    </form>

    <p class="capitalize mt-2 text-[16px]">already have account? <a href="/"><span class="text-red-600">click here</span></a></p>
  </div>
</div>

<% include ./partials/footer.ejs %>
  
