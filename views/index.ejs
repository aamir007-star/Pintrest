<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-100 flex items-center justify-center px-4">
  <div class="w-full sm:w-[50%] md:w-[60%] lg:w-[30%] xl:w-[30%] bg-white px-6 py-6 rounded-[30px] flex flex-col gap-3">
    <h1 class="text-3xl tracking-tight text-center font-semibold leading-non capitalize">login account to see more</h1>
  
    <form action="/login" method="post">
        <% if(error.length > 0){ %>
      <P class="text-center text-red-600 font-bold capitalize"><%= error %></P>
    <% }%>
      <input class="block border-1 rounded-md w-full px-3 mt-2 py-1" type="text" name="username" placeholder="username">
      <input class="block border-1 rounded-md w-full px-3 mt-2 py-1" type="password" name="password" placeholder="password">
      <input class="block w-full px-3 mt-2 py-1 bg-red-600 text-white rounded-full" type="submit" value="Login">
    </form>

    <p class="capitalize mt-2 text-[16px]">
      dont have account? <a href="/register"> <span class="text-red-600">Click Here</span></a>
    </p>
  </div>
</div>

